<Window x:Class="CSharpHealth.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CSharpHealth.Desktop.ViewModels"
        Title="CSharpHealth Desktop" Height="720" Width="980" MinHeight="640" MinWidth="920">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="CSharpHealth" FontSize="28" FontWeight="SemiBold" />
            <TextBlock Text="Analizza rapidamente la salute del tuo codice C# da file, cartella o repository GitHub." Foreground="{StaticResource MutedText}" />
        </StackPanel>

        <Grid Grid.Row="2" ColumnDefinitions="*,20,*" Margin="0,0,0,16">
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="18">
                <StackPanel>
                    <TextBlock Text="Origine" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="Seleziona una sorgente e avvia la scansione." Foreground="{StaticResource MutedText}" Margin="0,4,0,12" />

                    <RadioButton Content="Cartella locale" IsChecked="{Binding IsFolderSource, Mode=TwoWay}" />
                    <Grid Margin="0,4,0,0" ColumnDefinitions="*,Auto">
                        <TextBox Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsFolderSource}" />
                        <Button Content="Sfoglia" Style="{StaticResource SecondaryButton}" Command="{Binding BrowseFolderCommand}" IsEnabled="{Binding IsFolderSource}" />
                    </Grid>

                    <RadioButton Content="Singolo file" IsChecked="{Binding IsFileSource, Mode=TwoWay}" Margin="0,10,0,0" />
                    <Grid Margin="0,4,0,0" ColumnDefinitions="*,Auto">
                        <TextBox Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsFileSource}" />
                        <Button Content="Sfoglia" Style="{StaticResource SecondaryButton}" Command="{Binding BrowseFileCommand}" IsEnabled="{Binding IsFileSource}" />
                    </Grid>

                    <RadioButton Content="Repository GitHub" IsChecked="{Binding IsRepoSource, Mode=TwoWay}" Margin="0,10,0,0" />
                    <TextBox Text="{Binding RepoUrl, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsRepoSource}" ToolTip="https://github.com/owner/repo" />

                    <Separator Margin="0,18,0,12" />

                    <TextBlock Text="Opzioni" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="Mantieni la scansione essenziale con pochi parametri." Foreground="{StaticResource MutedText}" Margin="0,4,0,12" />

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="150">
                            <TextBlock Text="Top gruppi" Foreground="{StaticResource MutedText}" />
                            <TextBox Text="{Binding TopGroups, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Margin="16,0,0,0" Width="180">
                            <TextBlock Text="Formato output" Foreground="{StaticResource MutedText}" />
                            <ComboBox ItemsSource="{Binding OutputFormats}" SelectedItem="{Binding SelectedOutputFormat}" />
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Avvia scansione" Command="{Binding RunScanCommand}" IsEnabled="{Binding CanRunScan}" Margin="0,18,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="18">
                <StackPanel>
                    <TextBlock Text="Risultati" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="Qui trovi il report generato." Foreground="{StaticResource MutedText}" Margin="0,4,0,12" />
                    <TextBox Text="{Binding OutputText}" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="440" />
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="3" Background="#FFFFFF" CornerRadius="8" Padding="12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Stato:" FontWeight="SemiBold" Margin="0,0,6,0" />
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource MutedText}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
